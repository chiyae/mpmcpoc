rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the requesting user is an admin.
    // This reads the custom claim from the user's auth token.
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    // Rules for the /users collection
    match /users/{userId} {
      // READ (get, list)
      // Allow an admin to list all users or get any single user document.
      // Allow a non-admin user to get ONLY their own document.
      allow get: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow list: if request.auth != null && isAdmin();

      // WRITE (create, update, delete)
      // Allow a user to create their OWN document upon sign-up.
      // Also allow an admin to create any user document.
      allow create: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Allow a user to update their OWN document.
      // Also allow an admin to update any user document.
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());

      // Allow ONLY an admin to delete a user document.
      allow delete: if request.auth != null && isAdmin();
    }
  }
}
