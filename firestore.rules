
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function getUserData() {
      // Check if the user document exists before trying to access its data.
      // This prevents errors if a user is authenticated but their user doc hasn't been created yet.
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      if (exists(/databases/$(database)/documents/users/$(request.auth.uid))) {
        return userDoc.data;
      }
      // Return a default object with no role if the user document doesn't exist.
      return { "role": "none" };
    }

    function isAdmin() {
      return getUserData().role == 'admin';
    }
    
    function isCashier() {
      return getUserData().role == 'cashier';
    }

    function isPharmacy() {
      return getUserData().role == 'pharmacy';
    }

    match /items/{itemId} {
      // Any authenticated user can read item definitions, only admins can change them.
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /vendors/{vendorId} {
      // Any authenticated user can read vendor info, only admins can change it.
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /services/{serviceId} {
        // Any authenticated user can read service info, only admins can change it.
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    match /settings/{settingId} {
      // Only admins can read or write settings.
      allow read, write: if isAdmin();
    }

    match /users/{userId} {
      // A user can always read their own document.
      allow get: if request.auth.uid == userId;
      // Admins can list and edit any user.
      allow list, update, create, delete: if isAdmin();
    }

    // Cashiers and admins can manage bills.
    match /billings/{billingId} {
      allow read, write: if isCashier() || isAdmin();
      allow list: if isCashier() || isAdmin();
    }
    
    // Pharmacy staff and admins can manage stock.
    match /stocks/{stockId} {
      allow read, write: if isPharmacy() || isAdmin();
      allow list: if isPharmacy() || isAdmin();
    }
    
    // Pharmacy staff can create/read internal orders, admins can manage them completely.
    match /internalOrders/{orderId} {
      allow read: if isPharmacy() || isAdmin();
      allow create: if isPharmacy() || isAdmin();
      allow update, delete: if isAdmin();
      allow list: if isPharmacy() || isAdmin();
    }
  }
}
