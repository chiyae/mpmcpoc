rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Allow a user to get their own document.
      // Allow a user with the 'admin' role to get any user document.
      allow get: if request.auth.uid == userId ||
                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Allow a user with the 'admin' role to list all user documents.
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Allow any authenticated user to create their own user document.
      // This is crucial for the sign-up process.
      allow create: if request.auth.uid == userId;

      // Allow a user to update their own document, or an admin to update any user document.
      allow update: if request.auth.uid == userId ||
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Only allow an admin to delete a user document.
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
