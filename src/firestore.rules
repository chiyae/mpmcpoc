
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an admin.
    // It checks for the existence of a document in the 'admins' collection
    // with the user's UID as the document ID. This is a secure way to check roles.
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can perform any action on any user document.
      allow list, get, create, update, delete: if isAdmin();
      
      // A non-admin user can get or update their OWN document.
      allow get, update: if request.auth.uid == userId;
      
      // A user can create their own document upon first sign-up.
      allow create: if request.auth.uid == userId;
    }

    // Rules for the 'admins' collection.
    // This collection stores the UIDs of all admin users.
    match /admins/{userId} {
      // Only another admin can read, create, or delete admin records.
      // This prevents a non-admin from making themselves an admin.
      allow read, create, delete: if isAdmin();
    }

    // Catch-all rule for any other collection.
    // By default, deny all access unless explicitly allowed above.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
