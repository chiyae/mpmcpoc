rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      // Check for existence of the document in 'admins' collection
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /users/{userId} {
      allow list: if isAdmin();
      allow get, update: if request.auth.uid == userId || isAdmin();
      // Allow create only if it's their own document, or if an admin is creating it.
      allow create: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }

    match /admins/{adminId} {
      // Only other admins can see who is an admin
      allow read: if isAdmin();
      // Only admins can create or delete other admins
      allow write: if isAdmin();
    }

    match /items/{itemId} {
      allow read, write: if request.auth != null;
    }

    match /vendors/{vendorId} {
      allow read, write: if request.auth != null;
    }

    match /services/{serviceId} {
      allow read, write: if request.auth != null;
    }
  }
}
