
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an admin.
    // It checks for the existence of a document in the 'admins' collection
    // with the user's UID as the document ID. This is a secure way to check roles.
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow any authenticated user to list all users.
      allow list: if request.auth != null;

      // Allow a user to get, update, or create their OWN document.
      allow get, update, create: if request.auth.uid == userId;

      // Additionally, allow an admin to perform any action.
      allow get, update, create, delete: if isAdmin();
    }

    // Rules for the 'admins' collection.
    // This collection stores the UIDs of all admin users.
    match /admins/{userId} {
      // Allow any authenticated user to read, create, or delete admin records.
      // This is relaxed for the prototyping environment.
      allow read, create, delete: if request.auth != null;
    }

    // Default deny for all other paths.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
