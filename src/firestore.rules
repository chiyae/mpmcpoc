
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ============================
       AUTH & ROLE HELPERS
       ============================ */

    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isUserDocOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return getUserRole() == "admin";
    }

    function isCashier() {
      return getUserRole() == "cashier";
    }

    function isPharmacy() {
      return getUserRole() == "pharmacy";
    }
    
    function isAssignedToLocation(locationId) {
      let userLocation = getUserData().locationId;
      return userLocation == 'all' || userLocation == locationId;
    }

    /* ============================
       MASTER DATA
       ============================ */

    match /items/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /vendors/{vendorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /services/{serviceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    /* ============================
       SETTINGS
       ============================ */

    match /settings/{settingId} {
      // Allow read for all authenticated users so client can get currency settings
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    /* ============================
       USERS
       ============================ */

    match /users/{userId} {
      // User can read own doc. Admins can read/write any user doc.
      allow get: if isAuthenticated() && isUserDocOwner(userId);
      allow list, create, update, delete: if isAdmin();
    }

    /* ============================
       PROCUREMENT
       ============================ */

    match /procurementSessions/{sessionId} {
        // Users can manage their own procurement sessions. Admins can manage all.
        allow read, write: if isAuthenticated() && (isAdmin() || isPharmacy());
    }

    /* ============================
       BILLINGS
       ============================ */

    match /billings/{billingId} {
      // Cashiers can read bills from their location. Admins can read all.
      allow get: if isAuthenticated() && (isAdmin() || (isCashier() && isAssignedToLocation(resource.data.dispensingLocationId)));
      allow list: if isAuthenticated() && (isAdmin() || isCashier());
      
      // Cashiers can create/update bills for their location.
      allow create, update: if isAuthenticated() && (isAdmin() || (isCashier() && isAssignedToLocation(request.resource.data.dispensingLocationId)));
      
      // Only Admins can delete bills.
      allow delete: if isAdmin();
    }

    /* ============================
       STOCKS
       ============================ */

    match /stocks/{stockId} {
      // Pharmacy staff can read stock from their location. Admins can read all.
      allow get: if isAuthenticated() && (isAdmin() || (isPharmacy() && isAssignedToLocation(resource.data.locationId)));
      allow list: if isAuthenticated() && (isAdmin() || isPharmacy());
      
      // Pharmacy staff can write to stock in their location.
      allow write: if isAuthenticated() && (isAdmin() || (isPharmacy() && isAssignedToLocation(request.resource.data.locationId)));
    }

    /* ============================
       INTERNAL ORDERS
       ============================ */

    match /internalOrders/{orderId} {
       // Pharmacy staff can read orders from/to their location. Admins can read all.
      allow get: if isAuthenticated() && (isAdmin() || (isPharmacy() && isAssignedToLocation(resource.data.requestingLocationId)));
      allow list: if isAuthenticated() && (isAdmin() || isPharmacy());

      // Pharmacy staff can create orders for their location.
      allow create: if isAuthenticated() && (isAdmin() || (isPharmacy() && isAssignedToLocation(request.resource.data.requestingLocationId)));
      
      // Only Admins can update status or delete.
      allow update, delete: if isAdmin();
    }

  }
}

    